{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES6",
        "allowJs": true,
        "isolatedModules": true,

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        
        "outDir": "dist",
        "sourceMap": true,
        
        "lib": [
            "es2022",
            "dom",
            "dom.iterable"
        ],
    },
    "include": [
        "src/**/*.ts",
    ],
    "paths": {
      "@": ["./src"],
      "*": ["*", "node_modules/*"]
    }    
}